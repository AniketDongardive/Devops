pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Build in progress...'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
            }
        }
        stage('Deploy') {
            steps {
                bat 'javac program.java'
                bat 'java program'
                echo 'Deploying...'
            }
        }
    }
}
